<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ToggleButton
        android:text="ToggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/listelement_toggle_ToggleButton"
        android:layout_margin="10dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listelement_toggle_TextView"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/listelement_toggle_ToggleButton"
        android:layout_alignBottom="@+id/listelement_toggle_ToggleButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/listelement_toggle_ToggleButton"
        android:layout_toStartOf="@+id/listelement_toggle_ToggleButton"
        android:layout_margin="10dp" />

</RelativeLayout>