<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/target_TextView1"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/target_TextView2"
        android:layout_below="@+id/target_TextView1"
        android:layout_alignLeft="@+id/target_TextView1"
        android:layout_alignStart="@+id/target_TextView1"
        android:layout_marginTop="-10dp" />

    <view
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        class="com.oldwoodsoftware.steward.fragment.gui.customview.PanelView"
        android:layout_below="@+id/target_TextView2"
        android:layout_alignLeft="@+id/target_TextView2"
        android:layout_alignStart="@+id/target_TextView2"
        android:id="@+id/target_panelview"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:focusable="true" />

</RelativeLayout>